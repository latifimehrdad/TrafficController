<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="login"
            type="com.ngra.trafficcontroller.viewmodels.activitys.ViewModel_LoginActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ML_White"
        >



        //______________________________________________ Footer
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ML_White"
            android:paddingTop="@dimen/_140sdp"
            android:gravity="center"
            >

            <FrameLayout
                android:id="@+id/loginFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                />


        </LinearLayout>
        //_____________________________________________ Footer



        //_______________________________________________ Header
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:orientation="vertical"
            >

            <com.ngra.trafficcontroller.views.customview.MLCurveHeader
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backcolor="@color/colorPrimary"
                app:PitOpenings="0"
                />

        </LinearLayout>
        //______________________________________________ Header





        //_________________________________________________ Ngra Icon
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_85sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/login_ngra_icon2"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_White"
                    android:textSize="@dimen/_15sdp"
                    android:text="N"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/login_ngra_icon1"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_White"
                    android:textSize="@dimen/_15sdp"
                    android:text="G"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/login_ngra_icon4"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_White"
                    android:textSize="@dimen/_15sdp"
                    android:text="R"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/login_ngra_icon3"
                android:layout_marginLeft="@dimen/_7sdp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_White"
                    android:textSize="@dimen/_15sdp"
                    android:text="A"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>
        //________________________________________________ Ngra Icon


    </RelativeLayout>


</layout>
